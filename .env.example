# ----------------------------------------------------------------------------
# Core application settings
# ----------------------------------------------------------------------------
APP_ENV=development
APP_NAME=project-monorepo
BACKEND_PORT=8000
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Database configuration (PostgreSQL)
# ----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/app_db

# ----------------------------------------------------------------------------
# Redis cache / queue
# ----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ----------------------------------------------------------------------------
# Authentication / security
# ----------------------------------------------------------------------------
JWT_SECRET=replace-me-with-a-secure-value
JWT_REFRESH_SECRET=replace-me-with-a-different-secure-value
JWT_ACCESS_TOKEN_EXPIRES_IN=3600
JWT_REFRESH_TOKEN_EXPIRES_IN=1209600
JWT_ALGORITHM=HS256
JWT_ISSUER=project-monorepo
JWT_AUDIENCE=project-monorepo-clients

COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
SESSION_COOKIE_NAME=app_session

# ----------------------------------------------------------------------------
# CORS configuration
# ----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# ----------------------------------------------------------------------------
# Storage settings (local default, S3-compatible optional)
# ----------------------------------------------------------------------------
STORAGE_BACKEND=local
STORAGE_LOCAL_BASE_PATH=/app/uploads
STORAGE_LOCAL_BASE_URL=/uploads

# S3 / MinIO overrides (optional)
STORAGE_S3_BUCKET=app-storage
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ENDPOINT_URL=http://minio:9000
STORAGE_S3_PUBLIC_BASE_URL=http://localhost:9000/app-storage
STORAGE_S3_USE_PRESIGNED_URLS=true
STORAGE_S3_DEFAULT_ACL=
STORAGE_AWS_ACCESS_KEY_ID=minioadmin
STORAGE_AWS_SECRET_ACCESS_KEY=minioadmin
STORAGE_AWS_SESSION_TOKEN=

# ----------------------------------------------------------------------------
# MinIO (S3-compatible object storage emulator)
# ----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ----------------------------------------------------------------------------
# Miscellaneous placeholders for future services
# ----------------------------------------------------------------------------
LOG_LEVEL=info
BACKEND_LOG_LEVEL=info
